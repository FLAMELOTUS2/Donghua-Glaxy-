const params = new URLSearchParams(window.location.search);
const videoId = params.get("id");

if(videoId){
    document.getElementById("dm-player").src =
    "https://www.dailymotion.com/embed/video/" + videoId + "?autoplay=1";
}else{
    document.getElementById("dm-player").outerHTML =
    "<h2 style='text-align:center;'>Video Not Found ‚ùå</h2>";
}
